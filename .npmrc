# Security settings for npm
# Enforce use of package-lock.json
package-lock=true

# Set audit level to moderate (fail on moderate+ vulnerabilities in CI)
audit-level=moderate

# Disable fund messages
fund=false

# Save exact versions to package.json
save-exact=true

# Enable strict SSL
strict-ssl=true

# Disable scripts from dependencies during install (security hardening)
# This prevents potentially malicious postinstall scripts from running
ignore-scripts=true

# Registry configuration
registry=https://registry.npmjs.org/